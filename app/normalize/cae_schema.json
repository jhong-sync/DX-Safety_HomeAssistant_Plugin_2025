{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "CAE Alert",
    "type": "object",
    "required": ["eventId", "sentAt", "headline", "severity", "areas"],
    "properties": {
      "eventId": {"type": "string"},
      "sentAt": {"type": "string", "format": "date-time"},
      "headline": {"type": "string"},
      "description": {"type": "string"},
      "severity": {"type": "string", "enum": ["minor","moderate","severe","critical"]},
      "expiresAt": {"type": "string", "format": "date-time"},
      "areas": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {"type": "string"},
            "geometry": {
              "oneOf": [
                {"type": "object", "required": ["type","coordinates"], "properties": {"type": {"const": "Polygon"}, "coordinates": {"type": "array"}}},
                {"type": "object", "required": ["type","coordinates"], "properties": {"type": {"const": "Point"}, "coordinates": {"type": "array", "minItems": 2}}},
                {"type": "object", "required": ["type","coordinates","radius_km"], "properties": {"type": {"const": "Circle"}, "coordinates": {"type": "array", "minItems": 2}, "radius_km": {"type": "number"}}}
              ]
            }
          },
          "required": ["geometry"]
        }
      }
    }
  }